<div id="corpoFormulario">
<%- if devise_mapping.confirmable? %>
<%= link_to "Não recebeu sua confirmação?", 'javascript:;',{:id => "linkConfirmacao"} %>
<% end -%>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

<% if resource.errors.any? %>
<div id="error_explanation">
<h3><%= pluralize(resource.errors.count, "erro impediu", 'erros impediram') %> o cadastro de ser feito:</h3>

<ul>
<% resource.errors.full_messages.each do |msg| %>
<li><%= msg %></li>
<% end %>
</ul>
</div>
<% end %>
<table id='tabelaCadastro'>
<tr>
<td class='colunaNome'><%= f.label :nome, "Nome: " %></td>
<td class='colunaEntrada'><%= f.text_field :nome %></td>
</tr>
<tr>
<td class='colunaNome'><%= f.label :email, "E-mail:" %></td>
<td class='colunaEntrada'><%= f.email_field :email %></td>
</tr>
<tr>
<td class='colunaNome'><%= f.label :telefone, "Telefone: " %></td>
<td class='colunaEntrada'><%= f.text_field :telefone %></td>
</tr>
<tr>
<td class='colunaNome'><%= f.label :password, "Senha:" %></td>
<td class='colunaEntrada'><%= f.password_field :password %></td>
</tr>
<tr>
<td class='colunaNome'><%= f.label :password_confirmation, "Confirme sua senha:" %></td>
<td class='colunaEntrada'><%= f.password_field :password_confirmation %></td>
</tr>
</table>
<%= f.submit "Cadastrar" %>
<% end %>
</div> 
<script type="text/javascript">
	$j(document).ready(function(){
		$j('input[id=usuario_telefone]').setMask('phone');
	});
	$j('input[type=submit]').button();
</script>