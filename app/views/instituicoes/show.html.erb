<%=render 'menu'%>
<div id='colunaPrincipal'>
<p id="notice"><%= notice %></p>
<%=form_tag '/itens/busca' do%>
<%=text_field_tag 'patrimonio'%>
<%=submit_tag 'Buscar item'%>
<%end%>
<p>
  <b>Número leitos:</b>
  <%= @instituicao.numero_leitos %>
</p>

<p>
  <b>Nome:</b>
  <%= @instituicao.nome %>
</p>

<p>
  <b>Endereço:</b>
  <%= @instituicao.endereco %>
</p>
<p>
  <b>Complemento:</b>
  <%= @instituicao.complemento %>
</p>
<p>
  <b>Bairro:</b>
  <%= @instituicao.bairro %>
</p>

<p>
  <b>Cidade:</b>
  <%= @instituicao.cidade %>
</p>
<p>
  <b>Estado:</b>
  <%= @instituicao.estado %>
</p>
<%if @nivel == 3%><%= link_to 'Editar', edit_instituicao_path(@instituicao) %><%end%>
<div class='containnerEquipes'>
<h2>Seus setores nessa instituição</h2>
	<table id='equipes'>
		<tr>
			<th>Nome</th>
			<th>Opção</td>
		</tr>
		<%@setores_do_usuario.each do |setor|%>
		<tr>
			<td><%=setor.nome%></td>
			<td><button class='desassociar' id='<%=setor.id%>'>Desassociar</button>
		</tr>
		<%end%>
	</table>
</div>
<%= link_to 'Voltar', "/#{@usuario.id}" %>
</div>
<script type="text/javascript">
$j(document).ready(function(){
	function toggleHeader()
	{
		if($j('#equipes tr td')[0] == undefined)
			{
				$j('#equipes tr th').toggle();
			}
	}
	function configuraBotoes(){
		$j(".desassociar").button().click(function(){
			$j.post('/usuarios/remover_de_setor',{setor_id: $j(this).attr('id'), usuario_id:'<%=@usuario.id%>'});
			$j(this).parent().parent().remove();
			toggleHeader();
		});
	}
	configuraBotoes();
	toggleHeader();	
});
</script>