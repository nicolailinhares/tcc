<%=render '/instituicoes/menu'%>
<div id='colunaPrincipal'>
<h1><%=image_tag 'marcas.png'%>Marcas</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Nacionalidade</th>
    <th colspan='3'>Opções</th>
  </tr>

<% @marcas.each do |marca| %>
  <tr class="<%= cycle('', 'alt') %>">
    <td><%= marca.nome %></td>
    <td><%= marca.nacionalidade %></td>
    <td><%= link_to 'Informações', instituicao_marca_path(@instituicao.id,marca.id) %></td>
    <td><%= link_to 'Editar', edit_instituicao_marca_path(@instituicao.id,marca.id) %></td>
    <td><%= link_to 'Excluir', instituicao_marca_path(@instituicao.id,marca.id), :confirm => 'Confirma exlcusão da marca?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nova Marca', new_instituicao_marca_path(@instituicao.id) %>
</div>
<script type="text/javascript">
	selecionaMenu('marcas');
</script>