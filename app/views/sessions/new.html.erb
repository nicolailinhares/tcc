<%= form_for(resource, :as => 'login', :url => session_path(resource_name)) do |f| %>
<p class="campos"><label for="usuario_email">Email</label>
<input id="usuario_email" name="usuario[email]" size="30" type="email" /></p>

<p class="campos"><label for="usuario_password">Senha</label>
<input id="usuario_password" name="usuario[password]" size="30" type="password" /></p>

<p id="botaoEntrar"><%= f.submit "Entrar" %></p>

<% if devise_mapping.rememberable? -%>
<p id="lembrar"><%= f.check_box :remember_me %> <%= f.label :remember_me, "Lembrar dados" %></p>
<% end -%>
<% end %>

<%- if devise_mapping.recoverable? %>
<%= link_to "Esqueceu sua senha?", 'javascript:;',{:id => "linkSenha"} %>
<% end -%>