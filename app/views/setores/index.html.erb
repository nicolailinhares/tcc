<h1>Setores</h1>

<table>
  <tr>
    <th>Nome</th>
    <th>Cidade</th>
    <th>Estado</th>
    <th colspan='3'>Opções</th>
    <th>Filhos</th>
  </tr>

<% @setores.each do |setor| %>
  <tr class="<%= cycle('', 'alt') %>">
    <td><%= setor.nome %></td>
    <td><%= setor.cidade %></td>
    <td><%= setor.estado %></td>
    <td><%= link_to 'Informações', instituicao_setor_path(@instituicao.id,setor.id) %></td>
    <td><%= link_to 'Editar', edit_instituicao_setor_path(@instituicao.id,setor.id) %></td>
    <td><%= link_to 'Excluir', instituicao_setor_path(@instituicao.id,setor.id), :confirm => 'Confirma exlcusão do setor?', :method => :delete %></td>
    <td><%= link_to 'Salas', instituicao_setor_salas_path(@instituicao.id,setor.id)%>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Novo Setor', new_instituicao_setor_path(@instituicao.id) %>
<script type="text/javascript">
	seleciona('setores');
</script>