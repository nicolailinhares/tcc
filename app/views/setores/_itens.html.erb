<h2>Itens</h2>

<table>
  <tr>
    <th>Patrimonio</th>
    <th>Data aquisicao</th>
    <th>Status</th>
    <th colspan='3'>Opções</th>
  </tr>

<% @itens.each do |item| %>
  <tr>
    <td><%= item.patrimonio %></td>
    <td><%= item.data_aquisicao %></td>
    <td><%= item.status %></td>
    <td><%= link_to 'Informações', item %></td>
    <td><%= link_to 'Editar', edit_item_path(item) %></td>
    <td><%= link_to 'Excluir', item, :confirm => 'Confirma a exclusão do item?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
